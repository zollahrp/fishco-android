<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".activity.encyclopedia.FishListActivity">

    <!-- Div Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/header_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tombol Back (SVG Icon) -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back" /> <!-- SVG icon untuk tombol balik -->

        <!-- Nama Kategori -->
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Freshwater Fish" <!-- Ganti dengan kategori sesuai -->
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/search_bar_bg"
        android:hint="Search for fish"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#777777"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Div Isi -->
    <LinearLayout
        android:id="@+id/content_div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- List item untuk tiap ikan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center_vertical" >

            <!-- Foto Ikan (Bulat) -->
            <ImageView
                android:id="@+id/fish_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/fish_image_sample"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape" />

            <!-- Nama Ikan dan Nama Ilmiah -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- Nama Ikan -->
                <TextView
                    android:id="@+id/fish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cupang"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <!-- Nama Ilmiah Ikan -->
                <TextView
                    android:id="@+id/scientific_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Betta sp."
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tambahkan lebih banyak item ikan di sini -->
        <!-- // -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>